{
    "compilerOptions": {
        "outDir": "dist/esm",
        "declarationDir": "dist/types",
        "composite": true,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "module": "ES2020",
        "target": "ES6",
        "lib": [
            "es6"
        ],
        "allowJs": true,
        "moduleResolution": "node"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.js"
    ]
}